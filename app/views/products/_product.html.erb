<div class="col-sm-4 col-md-4">
   
  <div class="one-prod">
    <% cache product do %> 
      <h3>
        <%= product.name %>
      </h3>
      <hr>
      <%= link_to image_tag(product.image_url, class: "img-responsive"),product unless product.image_url.blank? %>
      <p>
        <%= product.description %>
      </p>
      <p>
        Id: #<%= product.id %>
      </p>
      <p>
        Color : <%= product.colour %>
      </p>
      <!--
      <p>
        <%= product.created_at %>
      </p>
      -->
      <p>
        $ <%= product.price %>
      </p>
      <%end%>

      <%= link_to 'Show more', product , class: "btn btn-default" %>
      <% if current_user && current_user.admin? %>
        <%= link_to 'Edit', edit_product_path(product) , class: "btn btn-default"  %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default"  %>
      <%end%>
  </div>
    
</div><!-- /col -->

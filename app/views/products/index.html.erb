<article class="container">
<p id="notice"><%= notice %></p>

<h2>Products</h2>
<hr>
  <div class="container-fluid prod">
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-sm-4 col-md-4">
        <div class="one-prod">
          <h3><%= product.name %></h3>
          <hr>
          <%= image_tag(product.image_url, class: "img-responsive") unless product.image_url.blank? %>
          <p><%= product.description %></p>
          <p>Id: #<%= product.id %></p>
          <p><%= product.colour %></p>
          <p><%= product.created_at %></p>
          <p>$ <%= product.price %></p>
          <%= link_to 'Show', product , class: "btn btn-default" %>
          <%= link_to 'Edit', edit_product_path(product) , class: "btn btn-default"  %>
          <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default"  %>
          </div>
        </div><!-- /col -->
      <% end %>
    </div>
  </div>


<br>
<hr>
<%= link_to 'New Product', new_product_path , class: "btn btn-default" %>
</article>
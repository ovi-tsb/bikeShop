<article class="container">
  <p id="notice"><%= notice %></p>
  <h2>Products</h2>
  <hr>
  <div class="container-fluid prod">
      <% cache (cache_key_for_products) do %>
        <% @products.each do |product| %>
          <%= render product %>
        <%end%>
      <% end %>
      
  </div>
  
  <hr>
  <%= link_to 'New Product', new_product_path , class: "btn btn-default" %>
</article>
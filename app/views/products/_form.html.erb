<article class="container min-height">
<%= form_for(product, html: { class: "form-class" }) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation" class="error_explanation">
      <h2>
        <%= pluralize(product.errors.count, "error") %> 
        prohibited this product from being saved:
      </h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>    
          
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="field col-md-4 col-sm-4 col-xs-5">
      <%= f.label :name %>
    </div>  
    <div class="field col-md-8 col-sm-8 col-xs-7">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="row">
    <div class="field col-md-4 col-sm-4 col-xs-5">
      <%= f.label :description %>
    </div>  
    <div class="field col-md-8 col-sm-8 col-xs-7">
      <%= f.text_area :description %>
    </div>
  </div>
  <div class="row">
    <div class="field col-md-4 col-sm-4 col-xs-5">
      <%= f.label :image_url %>
    </div>  
    <div class="field col-md-8 col-sm-8 col-xs-7">
      <%= f.text_field :image_url %>
    </div>
  </div>
  <div class="row">
    <div class="field col-md-4 col-sm-4 col-xs-5">
      <%= f.label :colour %>
    </div>  
    <div class="field col-md-8 col-sm-8 col-xs-7">
      <%= f.text_field :colour %>
    </div>
  </div>
  <div class="row">
    <div class="field col-md-4 col-sm-4 col-xs-5">
      <%= f.label :price %>
    </div>  
    <div class="field col-md-8 col-sm-8 col-xs-7">
      <%= f.text_field :price %>
    </div>
  </div>
  

  <div class="actions">
    <%= f.submit  class: "btn btn-default" %>
  </div>
<% end %>
</article>
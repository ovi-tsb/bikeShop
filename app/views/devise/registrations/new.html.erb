<article class="container min-height">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-class" }) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="row">
    <div class="field col-md-4 col-sm-4 col-xs-5">
      <%= f.label :email %>
    </div>  
    <div class="field col-md-8 col-sm-8 col-xs-7">
      <%= f.email_field :email, autofocus: true, :required => true, placeholder: "Email" %>
    </div>
  </div>
  <div class="row">
    <div class="field col-md-4 col-sm-4 col-xs-5">
      <%= f.label :first_name %>
    </div>  
    <div class="field col-md-8 col-sm-8 col-xs-7">
      <%= f.text_field :first_name, :required => true, placeholder: "First Name" %>
    </div>
  </div>
  <div class="row">
    <div class="field col-md-4 col-sm-4 col-xs-5">
      <%= f.label :last_name %>
    </div>  
    <div class="field col-md-8 col-sm-8 col-xs-7">
      <%= f.text_field :last_name, :required => true, placeholder: "Last name" %>
    </div>
  </div>
  <div class="row">
    <div class="field col-md-4 col-sm-4 col-xs-5">
      <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    </div>  
    <div class="field col-md-8 col-sm-8 col-xs-7">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
    </div>
  </div>
  <div class="row">
    <div class="field col-md-4 col-sm-4 col-xs-5">
      <%= f.label :password_confirmation %>
    </div>  
    <div class="field col-md-8 col-sm-8 col-xs-7">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-default" %>
  </div>
  
<% end %>

<%= render "devise/shared/links" %>
</article>
<article class="container min-height">
<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-class" }) do |f| %>
  <%= devise_error_messages! %>
      <div class="row">
        <div class="field col-md-4 col-sm-4 col-xs-2">
          <%= f.label :email %>
        </div>  
        <div class="field col-md-8 col-sm-8 col-xs-10">
          <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
        </div>
      </div>
      <div class="row">
        <div class="field col-md-8 col-md-offset-4 col-sm-8 col-sm-offset-4 col-xs-9 col-xs-offset-3">
          <div class="actions">
          <%= f.submit "Reset password", class: "     btn btn-primary" %>
          </div>
        </div>
      </div>
<% end %>

<%= render "devise/shared/links" %>
</article>
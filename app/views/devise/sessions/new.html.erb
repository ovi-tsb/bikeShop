<article class="container min-height">
  <h2>Log in</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-class" }) do |f| %>
    <div class="row">
      <div class="field col-md-4 col-sm-4 col-xs-5">
        <%= f.label :email %>
      </div>  
      <div class="field col-md-8 col-sm-8 col-xs-7">
        <%= f.email_field :email, autofocus: true, :required => true, placeholder: "Email" %>
      </div>
    </div>
    <div class="row">
      <div class="field col-md-4 col-sm-4 col-xs-5">
        <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      </div>  
      <div class="field col-md-8 col-sm-8 col-xs-7">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
      </div>
    </div>
    
  
    <% if devise_mapping.rememberable? -%>
      <div class="row">
      <div class="field col-md-4 col-sm-4 col-xs-5">
        <%= f.label :remember_me %>
      </div>  
      <div class="field col-md-8 col-sm-8 col-xs-7">
        <%= f.check_box :remember_me %>
      </div>
      </div>
    <% end -%>
  
    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-default" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</article>
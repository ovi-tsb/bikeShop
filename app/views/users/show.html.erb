<article class="container user-style">

<p id="notice"><%= notice %></p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Name:</strong>
  <span class="capitalize-name"> 
    <%= @user.first_name %> 
  </span>
</p>

<p>
  <strong>Last Name:</strong>
  <span class="capitalize-name">
    <%= @user.last_name %>
  </span>
</p>

<p>
  <strong>User Id:</strong>
  <%= @user.id %>
</p>
<br><br>

<%= link_to 'Edit', edit_user_path(@user) , class: "btn btn-default"%> 
<%= link_to 'Back', users_path , class: "btn btn-default"%>
</article>